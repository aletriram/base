{% extends "layouts/layout.njk" %}

{% block content %}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div id="app"></div>
			<h1 class"mt-3 mb-4">Noticias</h1>
			<hr>
		</div>
	</div>
	<div class="row">
		{% for noticia in noticias %}
		<div class="col-md-4 mb-5">
			<img src="{{ noticia.foto }}" alt="{{ noticia.titular }}" class="img-fluid">
			<h2>{{ noticia.titular }}</h2>
			<p>{{ noticia.entradilla }}</p>
			<a href="/noticias-lista/{{ noticia.id }}" class="btn btn-outline-primary btn-block">Leer m√°s</a>
		</div>
		{% endfor %}
	</div>
</div>

{% endblock %}

{% block scripts %}
	{{ super() }}
{% endblock %}
